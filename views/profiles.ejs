<head>
  <link rel="stylesheet" href="/styles/styles.css">
</head>
<main>
  <div id="header-container">
    <h1>Clients</h1>
    <form action="/profiles/search" method="GET">
      <input class="searchbar" type="text" name="q" placeholder="Search by name">
      <button class="btn btn-primary" type="submit">Search</button>
    </form>
    <a href="/profiles/create"><button id="newcClient" class="btn btn-success">New Client</button></a>
  </div>
  <div>
    <ul>
      <% const sortedProfiles = profiles.slice().sort((a, b) => a.name.localeCompare(b.name)); %>
      <% for (let i = 0; i < sortedProfiles.length; i++ ) { %>
        <li id="clientsNames">
          <a href="/profiles/<%= sortedProfiles[i].id %>"><%= sortedProfiles[i].name %></a>
          <a href="/profiles/<%= sortedProfiles[i].id %>/delete"><button id="cliDelBtn" class="btn btn-danger">Delete</button></a>
        </li>
      <% } %>
    </ul>
  </div>
</main>


