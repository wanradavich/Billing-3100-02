<div class="form-container">
    <form action="/products/search" method="GET">
      <input class="searchbar" type="text" name="q" placeholder="Search...">
      <button class="btn btn-secondary" type="submit">Search</button>
    </form>
  </div>
<body>
    <div class="header-container">
        <h1>Products</h1>
        <a class="btn btn-success" href="/products/edit">+ New Product</a> <!--change path name to the one you create if needed-->
    </div>
    <ul>
        <% products.forEach(product => { %>
            <% if (product && product.productName && product._id) { %>
                <li class="product-container">
                    <a href="/products/<%= product._id %>"><%= product.productName %></a> 
                    <a href="/products/<%= product._id%>/delete" class="btn btn-danger">Delete</a>

                </li>
            <% } %>
        <% }) %>
    </ul>
</body>


